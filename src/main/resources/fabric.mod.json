{
  "schemaVersion": 1,
  "id": "nfc",
  "version": "${version}",

  "name": "New Frontier Craft",
  "description": "Station API port of New Frontier Craft",
  "authors": [
    "Atilist, Birdy, RoadHog, Zowja"
  ],
  "contact": {
    "homepage": "https://glass-launcher.net/",
    "sources": "https://github.com/calmilamsy/BIN-fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/nfc/icon.png",

  "environment": "*",
  "entrypoints": {
    "stationapi:event_bus": [
      "net.newfrontiercraft.nfc.events.init.AchievementListener",
      "net.newfrontiercraft.nfc.events.init.BlockListener",
      "net.newfrontiercraft.nfc.events.init.ItemListener",
      "net.newfrontiercraft.nfc.events.init.PlayerHandlerListener",
      "net.newfrontiercraft.nfc.events.init.RecipeListener",
      "net.newfrontiercraft.nfc.events.init.ChunkListener"
    ],
    "stationapi:event_bus_client": [
      "net.newfrontiercraft.nfc.events.init.KeyBindingListener",
      "net.newfrontiercraft.nfc.events.init.TextureListener"
    ],
    "stationapi:event_bus_server": [
      "net.newfrontiercraft.nfc.events.init.ServerInitListener"
    ]
  },
  "mixins": [
    "nfc.mixins.json"
  ],

  "depends": {
    "minecraft": "1.0.0-beta.7.3"
  }
}
